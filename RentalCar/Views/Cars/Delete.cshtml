@model RentalCar.Data.Car


<div class="container">
    <div class="well">
        <h2>Delete Car</h2>
        @using (Html.BeginForm("Delete", "Cars", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(c => c.Make, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(c => c.Make, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Model, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(c => c.Model, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Year, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(c => c.Year, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Color, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(c => c.Color, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.Engine, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(c => c.Engine, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(c => c.PricePerDay, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(c => c.PricePerDay, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    <a href="/Cars/Details/@Model.Id" class="btn btn-default">Back</a>
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>
